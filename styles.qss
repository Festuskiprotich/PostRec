/* Sci-fi dark HUD style (minimal) */
QWidget { background-color: #07080a; color: #dffcff; font-family: 'Roboto', 'Segoe UI', sans-serif; }
QLabel#title { font-size: 18px; font-weight: 700; color: #9effd6; }
QFrame.card { background: rgba(255,255,255,0.02); border-radius: 10px; padding: 8px; border: 1px solid rgba(100,255,200,0.04); }
QPushButton { border-radius: 8px; padding: 8px 12px; background: rgba(255,255,255,0.02); border: 1px solid rgba(64,255,200,0.12); }
QPushButton:hover { box-shadow: 0 0 12px rgba(64,255,200,0.12); }
QLabel#statusLabel { font-size: 20px; font-weight: 800; }
